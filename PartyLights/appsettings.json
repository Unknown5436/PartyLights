{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": "Information",
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "logs/partylights-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7
        }
      }
    ]
  },
  "Audio": {
    "Source": "System",
    "Sensitivity": 0.5,
    "LatencyMs": 50,
    "AudioDeviceId": null
  },
  "Devices": {
    "Devices": [],
    "DeviceGroups": {}
  },
  "Effects": {
    "ActivePresetId": "",
    "GlobalParameters": {}
  },
  "UI": {
    "DarkMode": true,
    "Theme": "Dark",
    "ShowAudioVisualizer": true,
    "ShowDeviceStatus": true
  }
}
