<Window x:Class="PartyLights.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PartyLights - Audio-Synced Smart Lighting" 
        Height="900" Width="1400"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource BackgroundBrush}"
        MinHeight="700" MinWidth="1000">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="{StaticResource SurfaceBrush}" Padding="24,20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="PartyLights" 
                              FontSize="28" 
                              FontWeight="Bold" 
                              Foreground="{StaticResource TextBrush}"
                              VerticalAlignment="Center"/>
                    <TextBlock Text="Audio-Synced Smart Lighting" 
                              FontSize="14" 
                              Foreground="{StaticResource TextMutedBrush}"
                              VerticalAlignment="Center"
                              Margin="16,0,0,0"/>
                </StackPanel>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Ellipse Style="{StaticResource StatusIndicatorStyle}" Fill="{StaticResource ErrorBrush}"/>
                    <TextBlock Text="Disconnected" 
                              Foreground="{StaticResource TextSecondaryBrush}" 
                              VerticalAlignment="Center"
                              FontSize="14"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="320"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="320"/>
            </Grid.ColumnDefinitions>
            
            <!-- Left Panel - Device Management -->
            <Border Grid.Column="0" Background="{StaticResource CardBrush}" BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,0,1,0">
                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                    <StackPanel Margin="24">
                        <TextBlock Text="Devices" Style="{StaticResource SectionHeaderStyle}"/>
                        
                        <!-- Device List -->
                        <Border Style="{StaticResource CardStyle}" Margin="0,0,0,16">
                            <StackPanel>
                                <TextBlock Text="Connected Devices" 
                                          FontSize="16" 
                                          FontWeight="SemiBold" 
                                          Foreground="{StaticResource TextBrush}" 
                                          Margin="0,0,0,12"/>
                                
                                <!-- Device List Placeholder -->
                                <TextBlock Text="No devices connected" 
                                          Foreground="{StaticResource TextMutedBrush}" 
                                          HorizontalAlignment="Center" 
                                          Margin="0,20"
                                          FontStyle="Italic"/>
                                
                                <Button Content="Discover Devices" 
                                       Style="{StaticResource AccentButtonStyle}"
                                       Margin="0,16,0,0"
                                       Height="40"
                                       FontSize="14"/>
                            </StackPanel>
                        </Border>
                        
                        <!-- Device Groups -->
                        <Border Style="{StaticResource CardStyle}">
                            <StackPanel>
                                <TextBlock Text="Device Groups" 
                                          FontSize="16" 
                                          FontWeight="SemiBold" 
                                          Foreground="{StaticResource TextBrush}" 
                                          Margin="0,0,0,12"/>
                                
                                <ListBox Background="Transparent" 
                                        BorderThickness="0"
                                        Height="120">
                                    <ListBoxItem Content="All Devices" Foreground="{StaticResource TextSecondaryBrush}" Padding="8,4"/>
                                    <ListBoxItem Content="Living Room" Foreground="{StaticResource TextSecondaryBrush}" Padding="8,4"/>
                                    <ListBoxItem Content="Bedroom" Foreground="{StaticResource TextSecondaryBrush}" Padding="8,4"/>
                                </ListBox>
                                
                                <Button Content="Manage Groups" 
                                       Style="{StaticResource ModernButtonStyle}"
                                       Margin="0,8,0,0"
                                       Height="32"
                                       FontSize="12"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </Border>
            
            <!-- Center Panel - Audio Visualization -->
            <Border Grid.Column="1" Background="{StaticResource BackgroundBrush}">
                <Grid Margin="16">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Audio Visualizer -->
                    <Border Grid.Row="0" 
                           Style="{StaticResource CardStyle}"
                           Margin="0,0,0,16">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            
                            <TextBlock Grid.Row="0" 
                                      Text="Audio Visualizer" 
                                      FontSize="18" 
                                      FontWeight="SemiBold" 
                                      Foreground="{StaticResource TextBrush}" 
                                      Margin="0,0,0,16"/>
                            
                            <!-- Visualizer Placeholder -->
                            <Border Grid.Row="1" 
                                   Background="{StaticResource SurfaceBrush}" 
                                   BorderBrush="{StaticResource BorderBrush}" 
                                   BorderThickness="1" 
                                   CornerRadius="8"
                                   MinHeight="300">
                                <Grid>
                                    <TextBlock Text="Real-time Audio Analysis" 
                                              Foreground="{StaticResource TextMutedBrush}" 
                                              HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"
                                              FontSize="16"/>
                                    
                                    <!-- Sample visualization bars -->
                                    <StackPanel Orientation="Horizontal" 
                                               HorizontalAlignment="Center" 
                                               VerticalAlignment="Center"
                                               Margin="0,40,0,0">
                                        <Rectangle Width="4" Height="20" Fill="{StaticResource AccentBrush}" Margin="2"/>
                                        <Rectangle Width="4" Height="35" Fill="{StaticResource AccentBrush}" Margin="2"/>
                                        <Rectangle Width="4" Height="50" Fill="{StaticResource AccentBrush}" Margin="2"/>
                                        <Rectangle Width="4" Height="40" Fill="{StaticResource AccentBrush}" Margin="2"/>
                                        <Rectangle Width="4" Height="25" Fill="{StaticResource AccentBrush}" Margin="2"/>
                                        <Rectangle Width="4" Height="30" Fill="{StaticResource AccentBrush}" Margin="2"/>
                                        <Rectangle Width="4" Height="45" Fill="{StaticResource AccentBrush}" Margin="2"/>
                                        <Rectangle Width="4" Height="35" Fill="{StaticResource AccentBrush}" Margin="2"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </Grid>
                    </Border>
                    
                    <!-- Preset Controls -->
                    <Border Grid.Row="1" Style="{StaticResource CardStyle}">
                        <StackPanel>
                            <TextBlock Text="Lighting Effects" 
                                      FontSize="18" 
                                      FontWeight="SemiBold" 
                                      Foreground="{StaticResource TextBrush}" 
                                      Margin="0,0,0,16"/>
                            
                            <UniformGrid Columns="3" Margin="0,0,0,16">
                                <Button Content="🎵 Beat Sync" Style="{StaticResource ModernButtonStyle}" Margin="4" Height="50" FontSize="14"/>
                                <Button Content="🌈 Frequency" Style="{StaticResource ModernButtonStyle}" Margin="4" Height="50" FontSize="14"/>
                                <Button Content="🔊 Volume" Style="{StaticResource ModernButtonStyle}" Margin="4" Height="50" FontSize="14"/>
                                <Button Content="😊 Mood" Style="{StaticResource ModernButtonStyle}" Margin="4" Height="50" FontSize="14"/>
                                <Button Content="📊 Spectrum" Style="{StaticResource ModernButtonStyle}" Margin="4" Height="50" FontSize="14"/>
                                <Button Content="🎉 Party" Style="{StaticResource AccentButtonStyle}" Margin="4" Height="50" FontSize="14"/>
                            </UniformGrid>
                            
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <Button Content="▶ Start Sync" 
                                       Style="{StaticResource AccentButtonStyle}"
                                       Height="45"
                                       FontSize="16"
                                       FontWeight="Bold"
                                       Padding="24,0"
                                       Margin="0,0,12,0"/>
                                <Button Content="⏹ Stop Sync" 
                                       Style="{StaticResource ModernButtonStyle}"
                                       Height="45"
                                       FontSize="16"
                                       Padding="24,0"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>
            
            <!-- Right Panel - Settings -->
            <Border Grid.Column="2" Background="{StaticResource CardBrush}" BorderBrush="{StaticResource BorderBrush}" BorderThickness="1,0,0,0">
                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                    <StackPanel Margin="24">
                        <TextBlock Text="Settings" Style="{StaticResource SectionHeaderStyle}"/>
                        
                        <!-- Audio Source -->
                        <Border Style="{StaticResource CardStyle}">
                            <StackPanel>
                                <TextBlock Text="Audio Source" 
                                          FontSize="16" 
                                          FontWeight="SemiBold" 
                                          Foreground="{StaticResource TextBrush}" 
                                          Margin="0,0,0,12"/>
                                
                                <ComboBox Style="{StaticResource ModernComboBoxStyle}" 
                                         Height="36" 
                                         Margin="0,0,0,16">
                                    <ComboBoxItem Content="System Audio" IsSelected="True"/>
                                    <ComboBoxItem Content="Spotify"/>
                                </ComboBox>
                                
                                <TextBlock Text="Sensitivity" Style="{StaticResource LabelStyle}"/>
                                <Slider Style="{StaticResource ModernSliderStyle}" 
                                       Minimum="0" 
                                       Maximum="1" 
                                       Value="0.5" 
                                       Margin="0,0,0,8"/>
                                
                                <TextBlock Text="Latency (ms)" Style="{StaticResource LabelStyle}"/>
                                <TextBox Text="50" 
                                        Style="{StaticResource ModernTextBoxStyle}" 
                                        Height="36" 
                                        Margin="0,0,0,16"/>
                                
                                <TextBlock Text="Audio Device" Style="{StaticResource LabelStyle}"/>
                                <ComboBox Style="{StaticResource ModernComboBoxStyle}" 
                                         Height="36">
                                    <ComboBoxItem Content="Default Device"/>
                                    <ComboBoxItem Content="Speakers"/>
                                    <ComboBoxItem Content="Headphones"/>
                                </ComboBox>
                            </StackPanel>
                        </Border>
                        
                        <!-- Effect Settings -->
                        <Border Style="{StaticResource CardStyle}">
                            <StackPanel>
                                <TextBlock Text="Effect Settings" 
                                          FontSize="16" 
                                          FontWeight="SemiBold" 
                                          Foreground="{StaticResource TextBrush}" 
                                          Margin="0,0,0,12"/>
                                
                                <TextBlock Text="Brightness Range" Style="{StaticResource LabelStyle}"/>
                                <Grid Margin="0,0,0,8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBox Grid.Column="0" Text="10" Style="{StaticResource ModernTextBoxStyle}" Height="32" Margin="0,0,8,0"/>
                                    <TextBlock Grid.Column="1" Text="to" Foreground="{StaticResource TextMutedBrush}" VerticalAlignment="Center" Margin="8,0"/>
                                    <TextBox Grid.Column="2" Text="255" Style="{StaticResource ModernTextBoxStyle}" Height="32" Margin="8,0,0,0"/>
                                </Grid>
                                
                                <TextBlock Text="Color Intensity" Style="{StaticResource LabelStyle}"/>
                                <Slider Style="{StaticResource ModernSliderStyle}" 
                                       Minimum="0" 
                                       Maximum="1" 
                                       Value="0.8" 
                                       Margin="0,0,0,16"/>
                                
                                <Button Content="Advanced Settings" 
                                       Style="{StaticResource ModernButtonStyle}"
                                       Height="36"
                                       FontSize="14"/>
                            </StackPanel>
                        </Border>
                        
                        <!-- Quick Actions -->
                        <Border Style="{StaticResource CardStyle}">
                            <StackPanel>
                                <TextBlock Text="Quick Actions" 
                                          FontSize="16" 
                                          FontWeight="SemiBold" 
                                          Foreground="{StaticResource TextBrush}" 
                                          Margin="0,0,0,12"/>
                                
                                <Button Content="🔧 Device Settings" 
                                       Style="{StaticResource ModernButtonStyle}"
                                       Height="40"
                                       Margin="0,0,0,8"/>
                                
                                <Button Content="💾 Save Configuration" 
                                       Style="{StaticResource ModernButtonStyle}"
                                       Height="40"
                                       Margin="0,0,0,8"/>
                                
                                <Button Content="📁 Load Configuration" 
                                       Style="{StaticResource ModernButtonStyle}"
                                       Height="40"
                                       Margin="0,0,0,8"/>
                                
                                <Button Content="ℹ About" 
                                       Style="{StaticResource ModernButtonStyle}"
                                       Height="40"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>
        
        <!-- Status Bar -->
        <Border Grid.Row="2" Background="{StaticResource AccentBrush}" Padding="16,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="Ready" 
                              Foreground="White" 
                              VerticalAlignment="Center"
                              FontSize="14"/>
                    <TextBlock Text="•" 
                              Foreground="White" 
                              VerticalAlignment="Center"
                              Margin="8,0"
                              FontSize="14"/>
                    <TextBlock Text="No devices connected" 
                              Foreground="White" 
                              VerticalAlignment="Center"
                              FontSize="14"/>
                </StackPanel>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <TextBlock Text="v1.0.0" 
                              Foreground="White" 
                              VerticalAlignment="Center"
                              FontSize="14"
                              Margin="0,0,16,0"/>
                    <TextBlock Text="Ready" 
                              Foreground="White" 
                              VerticalAlignment="Center"
                              FontSize="14"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
